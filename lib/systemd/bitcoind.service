[Unit]
Description=Bitcoind Server
After=syslog.target
After=network.target

[Service]
Type=forking
User=coin
Group=coin
PIDFile=/home/coin/.bitcoin/bitcoind.pid
ExecStartPre=/bin/rm -f /home/coin/.bitcoin/bitcoind.pid
ExecStart=/opt/bin/bitcoind -daemon
ExecReload=/opt/bin/bitcoind stop; sleep 30s; /opt/bin/bitcoind start
ExecStop=/opt/bin/bitcoind stop
Restart=on-abort

[Install]
WantedBy=multi-user.target
